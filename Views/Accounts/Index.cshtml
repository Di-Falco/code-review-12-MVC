@using System.Security.Claims;
@model ParksMVC.Models.ApplicationUser;

@if (User.Identity.IsAuthenticated)
{
  <p>Hello @User.Identity.Name</p>
  <a href='@Url.Action("LogOff")'><button class="btn btn-primary">Log Out</button></a>
}
else
{
  <a href='@Url.Action("Register")'><button class="btn btn-primary">Register</button></a>
  <a href='@Url.Action("Login")'><button class="btn btn-primary">Log In</button></a>
}